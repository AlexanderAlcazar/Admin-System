<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.smc.javafx.JavaFXController">
    <children>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Username: " maxWidth="120"/>
                <TextField fx:id="username" maxWidth="120"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Password: " maxWidth="120"/>
                <PasswordField fx:id="password" maxWidth="120"/>
            </children>
        </HBox>
        <Button text="Login" alignment="CENTER" maxWidth="200" onAction="#onLoginAction"/>
        <Label fx:id="message" alignment="CENTER" maxWidth="200"/>

    </children>
</VBox>
