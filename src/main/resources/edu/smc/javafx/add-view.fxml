<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.smc.javafx.JavaFXController">
    <children>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="First Name: " maxWidth="120"/>
                <TextField fx:id="firstName" maxWidth="120"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Last Name: " maxWidth="120"/>
                <TextField fx:id="lastName" maxWidth="120"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Phone: " maxWidth="120"/>
                <TextField fx:id="phoneNumber" maxWidth="120"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Address: " maxWidth="120"/>
                <TextField fx:id="address" maxWidth="120"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Major: " maxWidth="120"/>
                <TextField fx:id="major" maxWidth="120"/>
            </children>
        </HBox>
        <Button text="add" alignment="CENTER" maxWidth="200" onAction="#onAddStudentAction"/>
        <Label fx:id="message" alignment="CENTER" maxWidth="200"/>
    </children>
</VBox>
